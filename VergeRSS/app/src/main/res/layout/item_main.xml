<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/updatesLayout">

   <ImageView
       android:id="@+id/itemImage"
       tools:ignore="ContentDescription"
       android:textColor="@color/primaryText"
       android:layout_width="120dp" android:layout_height="80dp"
       android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true" android:cropToPadding="false"
       android:padding="0dp"/>

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/itemImage"
        android:layout_toEndOf="@id/itemImage"
        android:paddingTop="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="3"
        android:shadowDy="-3"
        android:shadowRadius="1.5"
        android:textSize="18sp"
        android:textColor="@color/primaryText"
        android:textAllCaps="true"
        android:fontFamily="serif-monospace"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="@string/article_title" tools:ignore="UnusedAttribute"/>



</RelativeLayout>