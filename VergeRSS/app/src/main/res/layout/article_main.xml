<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/updatesLayout">

    <TextView
        android:id="@+id/articleTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="@string/article_title"/>

   <ImageView
       android:id="@+id/articleImage"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/articleTitleText"
       />

    <TextView
        android:id="@+id/articleLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/articleImage"
        android:text="@string/link"
        android:textSize="12sp"
        android:textColor="#04B4AE"
        android:layout_marginTop="15dp"/>


    <TextView
        android:id="@+id/publicationDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/articleLink"
        android:text="@string/date"
        android:textSize="12sp"
        android:textColor="#04B4AE"
        android:layout_marginTop="15dp"/>

</RelativeLayout>