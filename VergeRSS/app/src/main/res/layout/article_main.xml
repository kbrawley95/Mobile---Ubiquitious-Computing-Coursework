<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
    <TextView
        android:text="@string/article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:textAllCaps="true"
        android:fontFamily="serif-monospace"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:id="@+id/articleTitle"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/articleTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/articleImage" tools:ignore="ContentDescription"/>
    <TextView
        android:text="@string/article_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/articleImage"
        android:layout_centerHorizontal="true"
        android:id="@+id/articleDescription"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
      />

    <TextView
        android:text="@string/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/articleDescription"
        android:layout_centerHorizontal="true"
        android:id="@+id/articleLink"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/linkText"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_marginTop="0dp"
    />


    <TextView
        android:text="@string/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/articleLink"
        android:layout_centerHorizontal="true"
        android:id="@+id/articleAuthor"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:fontFamily="sans-serif"
        android:textColor="@color/background"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:text="@string/article_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/articleAuthor"
        android:layout_centerHorizontal="true"
        android:id="@+id/articlePubDate"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />


    </RelativeLayout>

</ScrollView>